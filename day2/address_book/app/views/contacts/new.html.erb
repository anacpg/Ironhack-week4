<!-- app/views/contacts/new.html.erb -->
<h1>Add a new contact</h1>



<form action="/contacts" method="POST">

  <br>
    <div>
      <label for="contact_name">Name</label>
      <input type="text" name="contact[name]" id="contact_name">
    </div>

  <br>
    <div>
      <label for="contact_address">Address</label>
      <input type="text" name="contact[address]" id="contact_address">
    </div>

  <br>
    <div>
      <label for="contact_phone">Phone number</label>
      <input type="text" name="contact[phone]" id="contact_phone">
    </div>

  <br>
    <div>
      <label for="contact_email">Email address</label>
      <input type="text" name="contact[email]" id="contact_email">
    </div>

  <br>
  <button type="submit">Add this contact</button>
  <input type="hidden" name="authenticity_token"
      value="<%= form_authenticity_token %>">

</form>
<br>
<%= link_to 'Back', contacts_index_path %>
